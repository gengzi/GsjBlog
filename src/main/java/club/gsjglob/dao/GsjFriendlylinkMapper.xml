   <select id="selectByParentname" resultMap="urlparent" >
		SELECT
			t.*,
		IF (t1.num IS NULL, 0, t1.num) num
		FROM
			gsj_friendlylink AS t
		LEFT JOIN (
			SELECT
				parentname parentid,
				COUNT(*) num
			FROM
				gsj_friendlylink
			WHERE
				parentname != "0"
			GROUP BY
				parentname
		) AS t1 ON t.id = t1.parentid
		WHERE
			t.parentname = "0"
  </select>
  
  
  
  
  
  
  
  
  
  
